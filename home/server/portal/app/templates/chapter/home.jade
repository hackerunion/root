extends ./base

block content
  include ./modals

  .row
    .twelve.columns
      //- arbitrary markup here

  .row.cramped
    .four.columns.sidebar
      include ./sidebar


    .eight.columns
      ul.tabs-content.contained
        li(id="talkTab").active
          h5 Start new topic
          //a(href="#").add-post
            | Add post
          .create-content
            form(name='talk-form', action='/nyc/talk', method='POST')
              textarea.talk-content-input
              .text-right
                span.leaders-only
                  .label.highlight Your post will be sent to the mailing list
                .button.radius.small.talk-submit Post

          hr
          ul.inline-list.filter.talk-filter
            li
              a(href="#").selected.all-talk All
            li
              a(href="#").promoted-talk Endorsed
            //- li
              a(href="#").mentees-talk My Mentees

          .alert-box.secondary
            | This section displays the mailing list.
            a(href="/nyc/posts/go/posting-guidelines") Read the rules!


          ul.feed.talk-feed
           //- include talk/talks
          
          ul.feed.event-feed




                li(class!="post event {% if bulletin.promoted_by %}promoted{% endif %}", data-id='')
                    .icon-promoted.has-tip.tip-top(title="Endorsed Post")
                    .icon-official.has-tip.tip-top(title="Only Visible to Guides")
                  .post-wrap
                    .creator 
                      strong 
                        a(href="/nyc/members/?n=") John Smith
                            span.moderated(title!="Moderated by John") * 
                      | created an event
                
                      span.right
                        span.changeit  
                          a(href="#", data-reveal-id="editEvent").event-edit
                              | Edit 
                        span.timestamp 5 minutes ago
                
                    h4.subheader
                      a(href="/nyc/posts/").title Title
                    .post-content(data-content!='')
                      |This is the post content
                    .event-deetz
                      .event-date 
                        span.start-date 1/2/95
                        span 
                          |  &mdash;  
                        span.end-date 1/2/99
                      .event-location  
                        span.where
                          strong Somehwere
                      .attendees
                        span.hacker-count 10
                        span.hacker-count-label
                          | hackers are in
                        | Are you?
                
                  
                  .bulletin-actions.text-right
                
                
                    span.recommend
                      span.icon-bulletin
                      span
                        a(class="recommend", data-placement='above', data-id="", data-message="I thought you might like this event", title="Share this post" )
                          | Share
                
                    span(class!="attending")
                      span.icon-bulletin
                      span
                        a(href="#", data-id="").event-attending
                          | Participate
                
                    span(class!="replies")
                      a(href="/nyc/posts/") 
                        span.icon-bulletin
                        span 4 Replies
                
                    span(class!="promote active")
                      span.icon-bulletin
                      span 
                        a(href="#", data-id="", data-leader!="").talk-promote 
